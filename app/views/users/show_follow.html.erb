<div class="row">
  <aside class="col-md-4">
    <section>
      <div><%= @user.email %></div>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Tweets:</b> <%= @user.tweets.count %></span>
    </section>

    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>


  <div class="col-md-8">
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div>
