<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">What's happening?</h3>
  </div>
  <div class="panel-body">
    <div class="well">
      <%= form_for(@tweet, :html => {:role => 'form', :class => 'form-horizontal'}) do |f| %>
        <% if @tweet.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

            <ul>
            <% @tweet.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <div><%= f.label :content %> (should be less than 140 characters)</div>
          <%= f.text_area :content, :class => 'input-text-area' %>
          <div id="tweet_error_field" class="hide">Tweet cannot be blank or more than 140 characters</div>
        </div>
        
        <div class="actions">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
